pipeline {
    agent { 
		docker { 
			image 'maven:3.3.3'
			args  '--net="training-playground"'
		}
	}
    stages {
        stage('tests') {
            steps {
                sh "mvn clean install -f '005 - Recording Test Results and Artifacts/04 - Publish in Nexus/pom.xml'"
		sh "mvn deploy -f '005 - Recording Test Results and Artifacts/04 - Publish in Nexus/pom.xml'"
            }
        }
    }
}
