pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage('build') {
     		steps {
        		saveAndPrintDate("date.txt")
      		}
    	}
	stage('test') {
		steps {
			sh "fileContent < cat date.txt"
			sh "$ [[ $fileContent = *"2023"* ]] && echo "Correct Year!""
		}
	}
    }
}
def saveAndPrintDate(filename = '') {
  sh "date > $filename && cat $filename"
}
